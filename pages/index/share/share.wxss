page{
  background: #EDEDED;
}
/* 分享图片 */
.share_box{
  width: 100%;
  height: 279rpx;
  position: relative;
  margin-bottom: 41rpx;
}
.share_rule{
  width:98rpx;
  height:48rpx;
  background:rgba(0,0,0,1);
  opacity:0.3;
  border-radius:24rpx;
  position: absolute;
  top: 22rpx;
  right: 24rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  line-height: 48rpx;
  text-align: center;
}
/* 头像 */
.share_headImg{
  width: 198rpx;
  height: 198rpx;
  margin: 0 auto;
  border-radius:50%;
  overflow: hidden;
  margin-bottom: 40rpx;
}
.share_character{
  font-size:28rpx;
  color:rgba(40,40,40,1);
  line-height:24rpx;
  margin-bottom: 41rpx;
  text-align: center;
}
.share_character text{
  margin: 0 auto;
}
/* 分享按钮 */
.share_btn{
  width:580rpx;
  height:80rpx;
  background:rgba(45,112,252,1);
  box-shadow:0rpx 20rpx 20rpx 0rpx rgba(46,115,255,0.18);
  border-radius:40rpx;
  margin: 0 auto;
  font-size:28rpx;
  color:rgba(255,255,255,1);
  line-height:80rpx;
  text-align: center;
  margin-bottom: 60rpx;
}
/* 可用收益  */
.earnings_box{
  width:100%;
  height:138rpx;
  background:rgba(255,255,255,1);
  padding: 25rpx 0 23rpx 24rpx;
  position: relative;
  margin-bottom: 25rpx;
}
.earnings_boxT{
  margin-bottom: 10rpx;
}
.earnings_boxT view{
  display: inline-block;
}
.earnings_line{
  width: 4rpx;
  height: 24rpx;
  background: #2E73FF;
}
.earnings_character{
  width:128rpx;
  height:31rpx;
  font-size:32rpx;
  color:rgba(40,40,40,1);
  line-height:31rpx;
  margin-left: 17rpx;
  margin-right: 530rpx;
}
.earnings_arrows{
  width: 18rpx;
  height: 18rpx;
  border-top: 4rpx solid #969696;
  border-right: 4rpx solid #969696;
  transform:rotate(45deg);
}
.earnings_usableM{
  width:173rpx;
  height:43rpx;
  font-size:r48px;
  line-height:43rpx;
  margin-bottom: 15rpx;
}
.earnings_usableM text{
  color:rgba(245,84,41,1);
}
.earnings_accumulativeM{
  height:23rpx;
  font-size:24rpx;
  color:rgba(159,159,159,1);
  line-height:24rpx;
}
.withdraw_deposit{
  width:98rpx;
  height:48rpx;
  background:rgba(45,112,252,1);
  border-radius:24rpx;
  color: #FFFFFF;
  font-size: 28rpx;
  line-height: 48rpx;
  text-align: center;
  position: absolute;
  bottom: 34rpx;
  right: 40rpx;
}
/* 我的邀请 */
.invite_boxT{
  margin-bottom: 20rpx;
}
.invite{
  display: flex;
  height: 72rpx;
}
.invite_line{
  width: 0rpx;
  height:72rpx;
  border-left: 1rpx dashed #969696;
  border-right: 1rpx dashed #969696;
  margin: 0 140rpx 0 140rpx;
}
.invite_people{
  font-size:24rpx;
  color:rgba(40,40,40,1);
  text-align: center;
}
.invite_consumption{
  margin-left: 116rpx;
}
.invite_money{
  color: #F55429;
  font-size: 28rpx;
}
/* 规则栏 */
.rule{
  width: 550rpx;
  height: 450rpx;
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -275rpx;
  margin-top: -225rpx;
  z-index: 6;
  font-size: 24rpx;
  color: #444;
  border-radius: 10rpx;
}
.rule-title{
  background: #2D70FC;
  border-radius: 40rpx;
  width: 150rpx;
  height: 40rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 40rpx;
  color: #fff;
  margin: auto;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.rule-item{
  width: 480rpx;
  margin: auto;
  margin-bottom: 15rpx;
}
.fullbg{
  position: fixed;
  top: 0;
  z-index: 5;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,0.4);
}
