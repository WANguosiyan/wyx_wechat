.box {
    height: 80rpx;
    white-space: nowrap;
    box-sizing: border-box;
    padding-left: 33rpx;
}
.box-item {
    height:80rpx;
    box-sizing: border-box;
    display: inline-block;
    line-height:80rpx;
    margin-right: 48rpx;
    font-size: 24rpx;
    color: #282828;
}
.bg{
  width: 100%;
  height: 18rpx;
  background: #F4F4F4;
}
.swiper-tab{
	width: 100%;
	border-bottom: 2rpx solid #777777;
	text-align: center;
	line-height: 80rpx;}
.swiper-tab-list{  font-size: 30rpx;
    display: inline-block;
	width: 33.33%;
	color: #777777;
}
.on{
  font-size: 28rpx;
  border-bottom: 3rpx solid #2D70FC;
} 
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }
/* 订单信息 */
.dingdan-info{
  width: 100%;
  height: 72rpx;
  border-bottom: 1rpx solid #F4F4F4;
  font-size: 20rpx;
  color: #646464;
  line-height: 72rpx;
}
.dingdan-info-L{
  float: left;
  margin-left: 32rpx;
}
.dingdan-info-R{
  float: right;
  font-size: 24rpx;
  color: #FF4747;
  margin-right: 31rpx;
}
.dingdan-item-box{
  height: 200rpx;
  padding-top: 32rpx;
}
.dingdan-item{
  margin-left: 32rpx;
}
/* 图片滚动 */
.dingdan-img-box{
  height: 166rpx;
  white-space: nowrap;
  box-sizing: border-box;
  padding-left: 33rpx;
}
.dingdan-img{
  width: 166rpx;
  height: 166rpx;
  border-radius: 6rpx;
  box-sizing: border-box;
  display: inline-block;
  margin-right: 15rpx;
}
/* 合计 */
.dingdan-heji{
  height: 76rpx;
  font-size: 24rpx;
  color: #646464;
  line-height: 76rpx;
  margin-bottom: 30rpx;
}
.dingdan-heji-L{
  float: left;
  margin-left: 33rpx;
}
.dingdan-heji-M{
  float: right;
}
.dingdan-heji-R{
  float: right;
  margin-left: 39rpx;
  margin-right: 31rpx;
  color: #282828;
}
.dingdan-heji-R text{
  font-size: 32rpx;
}
.payment{
  height: 64rpx;
  margin-bottom: 32rpx;
}
.payment view{
  float: right;
  margin-right: 31rpx;
  width: 169rpx;
  height: 64rpx;
  border:1rpx solid #FF4747;
  line-height: 64rpx;
  text-align: center;
  font-size: 24rpx;
  color: #FF4747; 
}
