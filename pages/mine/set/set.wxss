.line{
  width: 100%;
  height: 1rpx;
  background: #F1F1F1;
}
.touxiang{
  width: 702rpx;
  height: 137rpx;
  margin: auto;
  position: relative;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #272727;
}
.touxiang-img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  right: 0;
}
.touxiang-name{
  position: absolute;
  right: 0;
  color: #A9A9A9;
}
.log-off{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #FF5959;
  color: #FEFEFE;
  font-size: 28rpx;
  position: fixed;
  bottom: 0;
}
.changename{
  width: 500rpx;
  height: 250rpx;
  padding-top: 50rpx;
  background: #fff;
  margin: auto;
  font-size: 30rpx;
  position: relative;
  z-index: 10;
}
.newname{
  width: 300rpx;
  margin: auto;
  text-align: center;
  margin-bottom: 25rpx;
}
.changename input{
  width: 300rpx;
  background:rgba(0,0,0,0.1);
  margin: auto;
  margin-bottom: 25rpx;
}
.queding{
  float: left;
  margin-left: 50rpx;
}
.quxiao{
  float: right;
  margin-right: 50rpx;
}
.fullbg{
  position: fixed;
  top: 0;
  z-index: 5;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,1);
  opacity:0.4;
}